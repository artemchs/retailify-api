{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "Artem Chernysh",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm dev:db:up && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pre:test:e2e": "pnpm test:storage:restart && pnpm test:db:restart && dotenv -e .env.test -- prisma migrate reset --force",
    "test:e2e": "pnpm pre:test:e2e && dotenv -e .env.test -- jest -i --no-cache --watch --config ./test/jest-e2e.json",
    "test:db:up": "docker compose up test-db -d",
    "test:db:rm": "docker compose rm test-db -f -s -v",
    "test:db:restart": "pnpm test:db:rm && pnpm test:db:up && sleep 5",
    "test:storage:up": "docker compose up localstack -d && docker exec backend-localstack-1 awslocal s3api create-bucket --bucket test --region us-east-1",
    "test:storage:rm": "docker compose rm localstack -f -s -v",
    "test:storage:restart": "pnpm test:storage:rm && pnpm test:storage:up",
    "pre:test:int": "pnpm test:storage:restart && pnpm test:db:restart && dotenv -e .env.test -- prisma migrate reset --force",
    "test:int": "pnpm pre:test:int && dotenv -e .env.test -- jest -i --no-cache --watch --config jest.int.json",
    "test:unit": "jest --watch --config jest.unit.json",
    "commitlint": "commitlint --edit",
    "dev:db:up": "docker compose up dev-db -d",
    "dev:db:down": "docker compose down dev-db",
    "dev:db:restart": "docker compose down && docker compose up -d"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/s3-request-presigner": "^3.540.0",
    "@aws-sdk/util-format-url": "^3.535.0",
    "@grpc/grpc-js": "^1.10.4",
    "@grpc/proto-loader": "^0.7.12",
    "@grpc/reflection": "^1.0.3",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/throttler": "^5.1.2",
    "@prisma/client": "^5.14.0",
    "argon2": "^0.31.2",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "csv-parser": "^3.0.0",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.6.3",
    "libphonenumber-js": "^1.10.59",
    "long": "^5.2.3",
    "node-forge": "^1.3.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "protobufjs": "^7.2.6",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "transliteration": "^2.3.5",
    "ts-proto": "^1.171.0",
    "xlsx": "^0.18.5",
    "xml-crypto": "^6.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.2",
    "@types/node-forge": "^1.3.11",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.16",
    "@types/xml-crypto": "^1.4.6",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "pactum": "^3.6.4",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
