{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "Artem Chernysh",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm dev:db:up && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pre:test:e2e": "pnpm test:storage:restart && pnpm test:db:restart && dotenv -e .env.test -- prisma migrate reset --force && awslocal s3api create-bucket --bucket test",
    "test:e2e": "pnpm pre:test:e2e && dotenv -e .env.test -- jest -i --no-cache --watch --config ./test/jest-e2e.json",
    "test:db:up": "docker compose up test-db -d",
    "test:db:rm": "docker compose rm test-db -f -s -v",
    "test:db:restart": "pnpm test:db:rm && pnpm test:db:up && sleep 5",
    "test:storage:up": "docker compose up localstack -d",
    "test:storage:rm": "docker compose rm localstack -f -s -v",
    "test:storage:restart": "pnpm test:storage:rm && pnpm test:storage:up",
    "pre:test:int": "pnpm test:storage:restart && pnpm test:db:restart && dotenv -e .env.test -- prisma migrate reset --force && awslocal s3api create-bucket --bucket test",
    "test:int": "pnpm pre:test:int && dotenv -e .env.test -- jest -i --no-cache --watch --config jest.int.json",
    "test:unit": "jest --watch --config jest.unit.json",
    "commitlint": "commitlint --edit",
    "dev:db:up": "docker compose up dev-db -d",
    "dev:db:down": "docker compose down dev-db",
    "dev:db:restart": "docker compose down && docker compose up -d"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.484.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.7.1",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pactum": "^3.5.1",
    "prettier": "^3.0.0",
    "prisma": "^5.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
